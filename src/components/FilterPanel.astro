              name="type" 
              value={value} 
              checked={activeFilters.includes(value)}
              class="h-5 w-5 rounded border-gray-300 text-primary-600 transition-colors focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:focus:ring-primary-400"
