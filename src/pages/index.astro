---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchBar from '../components/SearchBar.astro';
import TopicGrid from '../components/TopicGrid.astro';
import ResourceList from '../components/ResourceList.astro';

const featuredTopics = [
  { id: 'frontend', name: 'Frontend Development', icon: 'üé®' },
  { id: 'backend', name: 'Backend Development', icon: '‚öôÔ∏è' },
  { id: 'mobile', name: 'Mobile Development', icon: 'üì±' },
  { id: 'ui-ux', name: 'UI/UX Design', icon: '‚ú®' },
  { id: 'graphic-design', name: 'Graphic Design', icon: 'üéØ' },
  { id: 'motion-design', name: 'Motion Design', icon: 'üé¨' },
];
---

<BaseLayout title="Educational Resources Directory">
  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="mb-4 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
        Educational Resources Directory
      </h1>
      <p class="mx-auto mb-8 max-w-2xl text-lg text-gray-600 dark:text-gray-300">
        Find the best resources to learn programming, design, and more. Curated by the community, for the community.
      </p>

      <div class="mb-12">
        <SearchBar />
      </div>
    </div>

    <section class="mb-16">
      <h2 class="mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
        Popular Topics
      </h2>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {featuredTopics.map(topic => (
          <a 
            href={`/topics/${topic.id}`}
            class="group relative overflow-hidden rounded-lg border border-gray-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:shadow-md dark:border-gray-700 dark:bg-gray-800"
          >
            <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-lg bg-primary-50 text-2xl dark:bg-primary-900/10">
              <span role="img" aria-label={topic.name}>
                {topic.icon}
              </span>
            </div>
            <h3 class="mb-2 text-lg font-semibold text-gray-900 group-hover:text-primary-600 dark:text-white dark:group-hover:text-primary-400">
              {topic.name}
            </h3>
            <div class="mt-4 flex items-center gap-2">
              <span class="text-sm font-medium text-gray-600 dark:text-gray-400">
                View resources
              </span>
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                viewBox="0 0 20 20" 
                fill="currentColor" 
                class="h-4 w-4 transition-transform group-hover:translate-x-1"
              >
                <path 
                  fill-rule="evenodd" 
                  d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" 
                  clip-rule="evenodd" 
                />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>

    <section>
      <div class="mb-6 flex items-center justify-between">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">
          Featured Resources
        </h2>
        <a 
          href="/resources" 
          class="text-sm font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
        >
          View all
          <span class="sr-only">resources</span>
        </a>
      </div>
      <ResourceList limit={6} />
    </section>
  </div>
</BaseLayout>

<style>
  /* Add any custom styles here */
  :global(.dark) {
    color-scheme: dark;
  }

  @keyframes hover-up {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-4px);
    }
  }

  .group:hover {
    animation: hover-up 0.2s ease-out forwards;
  }
</style>
